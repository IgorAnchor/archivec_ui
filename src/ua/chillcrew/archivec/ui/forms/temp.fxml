<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="200.0" minWidth="300.0" prefHeight="601.0" prefWidth="792.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ua.chillcrew.archivec.ui.controllers.MainController">
   <bottom>
      <ToolBar nodeOrientation="LEFT_TO_RIGHT" BorderPane.alignment="CENTER">
         <items>
            <Label fx:id="labelArchiveInfo">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Label>
         </items>
      </ToolBar>
   </bottom>
   <top>
      <VBox prefHeight="0.0" prefWidth="0.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
               <menus>
                  <Menu mnemonicParsing="false" text="File">
                     <items>
                        <MenuItem fx:id="menuBarOpen" mnemonicParsing="false" onAction="#openArchive" text="Open">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                        <MenuItem fx:id="menuBarNewArchive" mnemonicParsing="false" onAction="#newArchive" text="New archive">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="menuBarSave" mnemonicParsing="false" onAction="#saveArchive" text="Save">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                        <MenuItem fx:id="menuBarSaveAs" mnemonicParsing="false" onAction="#saveArchiveAs" text="Save as...">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="menuBarSettings" mnemonicParsing="false" onAction="#settings" text="Settings">
                           <accelerator>
                              <KeyCodeCombination alt="DOWN" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="menuBarClose" mnemonicParsing="false" onAction="#close" text="Close">
                           <accelerator>
                              <KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator>
                        </MenuItem>
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Edit">
                     <items>
                        <MenuItem fx:id="menuBarAddFiles" disable="true" mnemonicParsing="false" onAction="#addFiles" text="Add files" />
                        <MenuItem fx:id="menuBarRemoveFiles" disable="true" mnemonicParsing="false" onAction="#removeFiles" text="Remove files" />
                     </items>
                  </Menu>
               </menus>
            </MenuBar>
            <ToolBar prefHeight="40.0" prefWidth="200.0">
              <items>
                <Button fx:id="buttonExtract" disable="true" mnemonicParsing="false" onAction="#extractFiles" text="Extract" />
                  <Button fx:id="buttonExtractAll" disable="true" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#extract" text="Extract all" />
                  <Button fx:id="buttonArchivate" disable="true" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#crush" text="Archivate" />
              </items>
            </ToolBar>
         </children>
      </VBox>
   </top>
   <left>
      <TableView fx:id="tableArchiveContent" BorderPane.alignment="CENTER">
         <columns>
            <TableColumn fx:id="tableColumnId" maxWidth="500.0" minWidth="20.0" prefWidth="30.0" text="id" />
            <TableColumn fx:id="tableColumnName" minWidth="100.0" prefWidth="400.0" text="name" />
            <TableColumn fx:id="tableColumnSize" maxWidth="2000.0" minWidth="50.0" prefWidth="100.0" text="size" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </left>
   <center>
      <TreeTableView fx:id="tableArchiveContent" prefHeight="500.0" prefWidth="312.0" BorderPane.alignment="CENTER">
        <columns>
          <TreeTableColumn fx:id="tableColumnId" prefWidth="75.0" text="id" />
          <TreeTableColumn fx:id="tableColumnName" prefWidth="75.0" text="name" />
            <TreeTableColumn fx:id="tableColumnSize" prefWidth="75.0" text="size" />
        </columns>
      </TreeTableView>
   </center>
</BorderPane>
